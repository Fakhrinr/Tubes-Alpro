package main

import"fmt"

package main

import "fmt"

func main() {
	fmt.Println("Selamat datang di aplikasi investasi")
	fmt.Println("Silakan pilih menu yang tersedia")

	Menu()

}

func Menu() {
	var pilihan int
	for {
		fmt.Println("---------------------")
        fmt.Println("	MENU")
        fmt.Println("---------------------")
        fmt.Println("1. Tambah Investasi")
        fmt.Println("2. Ubah Investasi")
        fmt.Println("3. Hapus Investasi")
        fmt.Println("4. Cari Investasi")
        fmt.Println("5. Urutkan Investasi")
        fmt.Println("6. Laporan Portofolio")
        fmt.Println("7. Keluar")
        fmt.Println("---------------------")

		fmt.Scan(&pilihan)

		switch pilihan {
		case 1:
			//SAHAM()
		case 2:
			//OBLIGASI()
		case 3:
			//REKSADANA()
		default:
			fmt.Println("Terima kasih telah menggunakan aplikasi ini")
		}
		if pilihan == 4 {
			break
		}
	}
}

func Saham() {
	fmt.Println("Saham adalah surat berharga yang menunjukkan kepemilikan atas suatu perusahaan.")
	fmt.Println("Saham dapat memberikan keuntungan dari dividen dan capital gain.")
	fmt.Println("Silakan pilih jenis saham yang ingin Anda beli:")
	fmt.Println("1. Saham Biasa")
	fmt.Println("2. Saham Preferen")
}

func Obligasi() {
	fmt.Println("Obligasi adalah surat utang yang diterbitkan oleh perusahaan atau pemerintah.")
	fmt.Println("Obligasi dapat memberikan keuntungan dari bunga dan capital gain.")
	fmt.Println("Silakan pilih jenis obligasi yang ingin Anda beli:")
	fmt.Println("1. Obligasi Korporasi")
	fmt.Println("2. Obligasi Pemerintah")
}